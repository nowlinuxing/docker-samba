# Setting up Samba as a Standalone Server - SambaWiki
# https://wiki.samba.org/index.php/Setting_up_Samba_as_a_Standalone_Server

[global]
	log file = /var/log/samba/%m
	log level = 1

<% @param["sections"].each.with_index do |(name, params), i| %>
[<%= name %>]
	path = <%= "/mount/#{name}" %>
	browsable = yes
	read only = no
	guest ok = no
	valid users = <%= @param["user"]["name"] %>
<% end %>
